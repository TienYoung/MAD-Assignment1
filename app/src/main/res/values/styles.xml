<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Existing styles remain unchanged -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCheckBox" parent="@style/MyTextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">#0D47A1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ViewTripsButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">#4CAF50</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">#E0E0E0</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="CardStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="PhoneNumberStyle">
        <item name="android:textColor">#0066CC</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>
</resources>